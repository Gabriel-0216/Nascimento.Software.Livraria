@model IEnumerable<Nascimento.Software.Livraria_WebApp.Models.ViewModels.LivroViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FotoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdePaginas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categorias.FirstOrDefault(p => p.Id == item.CategoriaId).Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FotoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.autores.FirstOrDefault(p=> p.Id == item.AutorId).Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdePaginas)
            </td>
            <td>
                <img src="@item.ImagemUrl" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
